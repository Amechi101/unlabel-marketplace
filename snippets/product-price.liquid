{% if template contains 'product' %}

	{% assign sold_out = true %}

	{% if product.available %}
	    {% assign sold_out = false %}
	    {% assign on_sale = false %}

	    {% if product.compare_at_price > product.price %}
	        {% assign on_sale = true %}
	        {% comment %}@TODO sale price {% endcomment %}
	    {% else %}
	        {{ product.price | money }}
	    {% endif %}
	{% else %}
	    Sold Out.
	{% endif %}

{% else %}

	{% assign sold_out = true %}

	{% if product.available %}
	    {% assign sold_out = false %}
	    {% assign on_sale = false %}

	    {% if product.compare_at_price > product.price %}
	        {% assign on_sale = true %}
	        {% comment %}@TODO sale price {% endcomment %}
	    {% else %}
	        <p><small>{{ product.price | money }}</small></p>
	    {% endif %}
	{% else %}
	    <p><small>Sold Out.</small></p>
	{% endif %}

{% endif %}