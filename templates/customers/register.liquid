<!-- /templates/customers/register.liquid -->
<div class="register">
    <section class="register__header">
        <div class="container container--narrow">
            <h2 class="register__headerTitle title title--small">Your account on Unlabel</h2>
            <p>Creating an account is simple and easy. An account will allow you to follow brands updates, add products to your wishlist, manage your personal details and more. Follow the next quick steps to set up your account today.</p>
        </div>
    </section>
    <hr>
    <section class="register__main">
        <div class="container container--narrow">

            {% form 'create_customer' %}
                {{ form.errors | default_errors }}
                
                <div class="form form--m-2 form-stacked">
                    <div class="form__row form__row--m-2">
                        <div class="form-group form__group">
                            <label class="form__label control-label required" for="FirstName" >First name</label>
                            <div class="form__field">
                                <input class="form-control" id="FirstName"  type="text" name="customer[first_name]" {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
                            </div>
                        </div>
                        <div class="form-group form__group">
                            <label class="form__label control-label required" for="LastName">Last name</label>
                            <div class="form__field">
                                <input class="form-control" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} type="text">
                            </div>
                        </div>
                    </div>
                    <div class="form__row">
                        <div class="form-group form__group">
                            <label class="form__label control-label required" for="Email">Email address</label>
                            <div class="form__field">
                                <input class="form-control {% if form.errors contains 'email' %}error{% endif %}" name="customer[email]" id="Email" {% if form.email %} value="{{ form.email }}"{% endif %} type="email">
                            </div>
                        </div>
                    </div>
                    <div class="form__row">
                        <div class="form-group form__group">
                            <label class="form__label control-label required" for="CreatePassword">Password</label>
                            <div class="form__field">
                                <input class="form-control {% if form.errors contains 'password' %}error{% endif %}" name="customer[password]" id="CreatePassword" type="password">
                            </div>
                        </div>
                    </div>
                    <div class="form__passwordSecurity">
                        <span>Security level (at least one capital letter and one number)</span><br class="u-mobile-only">
                        <span class="password-security" data-password-security-id="CreatePassword"><span class="password-security__bar"></span> <span class="password-security__bar"></span> <span class="password-security__bar"></span> <span class="password-security__bar"></span></span>
                    </div>

{% comment %}                    <p class="form__group">By creating an account, you agree to Unlabelâ€™s <a class="link" href="#">Privacy Policy</a> and <a class="link" href="#">Terms of Use</a></p>{% endcomment %}
                    <div class="form__actions">
                        <button class="cta cta--dark" name="registration_submit" type="submit">Create my account</button>
                    </div>
                    <p class="form__alternative">Already have an account? <a class="link" href="/account/login/">Sign in</a></p>
                </div>
            {% endform %}
        </div>
    </section>
</div>
