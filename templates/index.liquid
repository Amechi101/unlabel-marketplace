<!-- /templates/index.liquid -->
{% comment %}

  This is the homepage of your site.

  More info on global variables (available on all templates):
    - http://docs.shopify.com/themes/liquid-variables/global
{% endcomment %}

{% assign creators = linklists.creators %}
{% assign brands = linklists.brands %}

<section class="home__header">
    <div class="container">
        <div class="home__headerWrapper">
            <div class="visual visual--wideLandscape js-parallax js-animate c-mask" data-speed="-2" data-target=".is-smooth-scroll-compatible">
                <img src="{{ 'home-visual.jpg' | asset_url }}" alt="Intro">
            </div>
            <div class="home__headerTitleContainer js-parallax" data-speed="3" data-target=".is-smooth-scroll-compatible">
                <h2 class="title title--headline c-mask">
                    <span class="u-block letters-1">Unla
                    <span class="u-block letters-2">bel<span class="logo"><span class="logo__icon">{% include 'logo_dark' %}</span></span>
                    </span>
                </h2>
            </div>
            <div class="cols cols--m home__headerCols">
                <div class="col home__headerIntroContainer js-parallax" data-speed="2" data-target=".is-smooth-scroll-compatible">
                    <p class="title title--medium">The best place to shop quality, inspired apparel, footwear and accessories from independent brands all over the world.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="js-creator-parallax" class="home__creators color-context color-context--creators">
    <div class="home__CreatorsBg js-scroll-mask-right js-scroll-mask js-parallax"></div>
    <div class="container">
        <div class="home__creatorsCols">
            <div class="home__creatorsCol home__creatorsCol--left js-parallax" data-speed="1" data-target="#js-creator-parallax">
                {% for obj in creators.links limit:1 offset:0 %}
                    <article class="home_creatorGridItem">
                        {% include 'portrait-image-block' %}
                    </article>
                {% endfor %}
                <div class="home__creatorsTitleContainer js-parallax js-scroll" data-repeat>
                    <h2 class="title title--caps">Our<br>
                    creators</h2>
                </div>
                <div class="home__creatorsCtaContainer">
                    <a class="cta cta--dark" href="{{ pages.our-creators.url }}">Discover more</a>
                </div>
                <div class="home__creatorsSubtitleContainer js-parallax js-scroll" data-repeat>
                    <div class="subtitle subtitle--medium home_creatorGridItem">
                        Each item is personally selected by our network of creators for its quality, style, and uniqueness.
                    </div>
                </div>
            </div>
            <div class="home__creatorsCol home__creatorsCol--middle js-parallax" data-speed="1" data-target="#js-creator-parallax">
                {% for obj in creators.links limit:1 offset:1 %}
                    <article class="home_creatorGridItem js-parallax js-scroll" data-repeat>
                        {% include 'portrait-image-block' %}
                    </article>
                {% endfor %}
            </div>
            <div class="home__creatorsCol home__creatorsCol--right u-desktop-only js-parallax" data-speed="1" data-target="#js-creator-parallax">
                {% for obj in creators.links limit:2 offset:2 %}
                    <article class="home_creatorGridItem js-parallax js-scroll" data-repeat>
                        {% include 'portrait-image-block' %}
                    </article>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<section id="js-brands-parallax" class="home__brands color-context color-context--brands">
    <div class="container">
        <h2  class="home__brandsTitle title title--caps js-parallax js-scroll" data-repeat>Our<br class="u-desktop-only"/> Brands</h2>

        <div class="home__brandsCarousel carousel">
            <div class="cols cols--m cols--align-left cols--align-top">
                <div class="col brands__carouselColLeft">
                    <div class="swiper-container carousel_visualsSlider home__brandsVisualsSlider">
                        <div class="swiper-wrapper">
                        {% for brand in brands.links limit: 5 %}
                            <div class="swiper-slide js-parallax js-scroll" data-repeat>
                                <div class="visual visual--landscape">
                                    <img src="{{ brand.object.image | img_url: '1024x' }}" alt="{{ brand.title }}">
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="col brands__carouselColRight">
                    <div class="swiper-container carousel__backgroundsSlider home__brandsBgsSlider">
                        <div class="swiper-wrapper">
                            {% for brand in brands.links limit: 5 %}
                            <div class="swiper-slide">
                                <div class="carousel__bgSlide js-scroll-mask-left js-scroll-mask js-parallax" style="{% cycle 'background-color: #EDDDDD;', 'background-color: #DEEDEE;', 'background-color: #DDE0ED;' %}"></div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="home__brandsCarouselContentWrapper">
                        <div class="swiper-container carousel_contentsSlider home__brandsContentsSlider">
                            <div class="swiper-wrapper">
                                {% for brand in brands.links limit: 5 %}
                                    <div class="swiper-slide">
                                        <h3 class="carousel_contentItem subtitle">{{ brand.title }}</h3>
                                        <div class="carousel__contentItem desc desc--small">{{ brand.object.description | truncate: 400 }}</div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="home__brandsCarouselNav">
                            <a class="carousel__btn carousel__btn--prev" href="#prev"><span class="fonticon fonticon--smallBox fonticon--carouselArrowLeft"></span></a><a class="carousel__btn carousel__btn--next" href="#next"><span class="fonticon fonticon--smallBox fonticon--carouselArrowRight"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="home__brandsNav">
            <ul class="home__brandsNavList">
                <li class="home__brandsNavItem">
                    <a href="{{ collections.women.url }}" class="cta">See Women’s apparel</a>
                </li>
                <li class="home__brandsNavItem">
                    <a href="{{ pages.our-brands.url }}" class="cta cta--dark">See All Brands</a>
                </li>
                <li class="home__brandsNavItem">
                    <a href="{{ collections.men.url }}" class="cta">See Men’s apparel</a>
                </li>
            </ul>
        </nav>
    </div>
</section>

<section class="home__story">
    <div class="container">
        <div class="home__storyWrapper">
            <h2 class="subtitle js-parallax js-scroll" data-repeat>Who we are</h2>
            <div class="desc home__storyDesc js-parallax js-scroll" data-repeat>
                Unlabel is an online fashion destination driven by digital creatives who experience up-and-coming brands through their work. Their authentic product reviews create an informed and artful shopping experience we're proud to share with you.
            </div>
        </div>
    </div>
</section>

<section id="js-product-parallax" class="home__products color-context color-context--products">
    <div class="container">
        <h2 class="title title--caps home__productsTitle">Start<br>shopping</h2>
    </div>
    <div class="grid2 home__productsGrid js-parallax" data-speed="1.5" data-target="#js-product-parallax">
        <ol class="grid2__list">
           {% comment %} {% assign brand_list = collections | sort: "published_at" | reverse %}
            {% for brands in brand_list %}
           
                {% assign brand_collection = brands.metafields.collection_type.type %}
                {% assign date_published = brands.published_at | date: '%Y%m%d' %}
                
                {% if brand_collection == 'brand' %}
                    
                       
                  

                        {{ brands.title }}
                   
                    
                {% endif %}
            {% endfor %}{% endcomment %}

            {% for product in collections.all-products.products limit: 6 %}
                <li class="grid2__item js-parallax js-scroll" data-repeat>
                    {% include 'product-grid-item' %}
                </li>
            {% endfor %}
        </ol>
    </div>
</section>
