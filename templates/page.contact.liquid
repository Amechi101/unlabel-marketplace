<div class="contact">
    <div class="container">
        <div class="cols cols--m-2">
            <div class="col contact__header">
                <h2 class="title title--caps title--destructured">
                    <span class="u-block">con-</span>
                    <span class="u-block">tact</span>
                    <span class="u-block">us</span>
                </h2>
                <!-- <h3 class="subtitle subtitle--medium contact__subtitle">Our team is available to answer all your questions. Just </h3>-->
            </div>
            <div class="col contact__content">
                <ul class="contact__list">
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Shopper related inquiries</strong></p>
                        <a href="mailto:support@unlabel.us" class="contact_email">support@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Brand related inquiries</strong></p>
                        <a href="mailto:brands@unlabel.us" class="contact_email">brands@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Creator related inquiries</strong></p>
                        <a href="mailto:creators@unlabel.us" class="contact_email">creators@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Press &amp; media related inquiries</strong></p>
                        <a href="mailto:press@unlabel.us" class="contact_email">press@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>General inquiries</strong></p>
                        <a href="mailto:info@unlabel.us" class="contact_email">info@unlabel.us</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
