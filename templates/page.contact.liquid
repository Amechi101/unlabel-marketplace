<div class="contact">
    <div class="container">
        <div class="cols cols--m-2">
            <div class="col contact__header">
                <h2 class="title title--caps title--destructured">
                    <span class="u-block">con-</span>
                    <span class="u-block">tact</span>
                    <span class="u-block">us</span>
                </h2>
                <h3 class="subtitle subtitle--medium contact__subtitle">Our teams are at your disposal to answer your questions.</h3>
            </div>
            <div class="col contact__content">
                <ul class="contact__list">
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Customer related inquiries</strong></p>
                        <a href="mailto:concierge@unlabel.us" class="contact_email">concierge@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Brand related inquiries</strong></p>
                        <a href="mailto:brand@unlabel.us" class="contact_email">brand@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Creator related inquiries</strong></p>
                        <a href="mailto:ucc@unlabel.us" class="contact_email">ucc@unlabel.us</a>
                    </li>
                    <li class="contact__listItem">
                        <p class="contact__emailLabel"><strong>Press/media related inquiries</strong></p>
                        <a href="mailto:press@unlabel.us" class="contact_email">press@unlabel.us</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
