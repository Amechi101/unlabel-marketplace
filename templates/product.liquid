{% comment %}

  Rich snippets (itemscope, itemtype, etc.) for products are a theme requirement,
  and allow search engines to easily understand what the content is.

  For more information on these Scheme.org tags, visit:
    - http://schema.org/docs/gs.html

{% endcomment %}

{% assign brand_collection = product.vendor | handleize  %}


{% comment %}
    
    To capture if the current brand has other products in its collection to 
    show other related prdoucts

{% endcomment %}

{% for collection in product.collections %}
    {% capture collection_size %}
        {{ collection.products_count }}
    {% endcapture %}
{% endfor %}


{% assign collection_size = collection_size | plus:0 %}


{% comment %}
    
    Getting the creator matched to this product to input product review
    information for current product

{% endcomment %}
{% for tag in product.tags %}
    {% if tag contains "creator-" %}
        {% assign strip_creator_prefix = tag | remove: "creator-" %}
    
        {% capture creator_tag %}
            {{ strip_creator_prefix }}
        {% endcapture %}
    {% endif %} 
{% endfor %}

{% assign creator = creator_tag | handleize %}

{% assign creator_size_worn = collections[creator].metafields.creator_size_worn.creator_size %}
{% assign creator_city = collections[creator].metafields.location.city %}
{% assign creator_state_or_region = collections[creator].metafields.location.state_or_region | upcase %}
{% assign creator_country = collections[creator].metafields.location.country | upcase %}
{% assign creator_image = collections[creator].image %}
{% assign creator_profile_url = collections[creator].url %}
{% assign creator_name = collections[creator].title %}

{% assign creator_height = collections[creator].metafields.creator_physical.height %}
{% assign creator_chest_or_bust = collections[creator].metafields.creator_physical.chest_or_bust %}
{% assign creator_hips = collections[creator].metafields.creator_physical.hips %}
{% assign creator_waist = collections[creator].metafields.creator_physical.waist %}

{% assign cm_conversion_factor = 2.54 %}

<div class="product">
    <div class="container container--m-pad">
        <div class="product__overview">
            <div class="product__galleryContainer">
                <div class="gallery">
                    <div class="swiper-container gallery__larges">
                        <ul class="swiper-wrapper">
                            {% for image in product.images %}
                                <li class="swiper-slide">
                                    <div class="gallery__largesImgContainer">
                                        <img alt="{{ image.alt | escape }}" src="{{ image.src | img_url: 'large' }}" />
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="product__exclusiveLabel">
                            Sponsored Content
                        </div>
                    </div>
                    <div class="swiper-container gallery__thumbs">
                        <div class="swiper-wrapper">
                            {% for image in product.images %}
                                <a class="gallery__link swiper-slide" data-slide-to="{{ image.position }}" href="#">
                                    <div class="img-container">
                                        <img alt="{{ image.alt | escape }}" src="{{ image.src | img_url: 'large' }}" />
                                    </div>
                                </a> 
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="product__content">
                <div>
                    <h1 class="title product__title">{{ product.title }}</h1>
                    <a href="{{ collections[brand_collection].url }}">
                        <h2 class="product__brand uppercase">{{ product.vendor }}</h2>
                    </a>
                </div>
                <div>
                    <p class="product__price">{% include 'product-price' %}</p>
                </div>
                <div>
                    <div class="product__actions">
                        {% comment %}@TODO hook add to cart functionality {% endcomment %}
                        <form action="" class="form add-to-basket" id="add_to_basket_form" method="post" name="add_to_basket_form">
                            <input id="id_quantity" name="quantity" type="hidden" value="1">
                            <div class="basket-form__row">
                                {% if product.has_only_default_variant %}
                                    
                                {% else %}
                                    <div class="basket-form__col">
                                        <div class="form-group form__group">
                                            <label class="form__label control-label required" for="id_child_id">Variant</label>
                                            <div class="form__field">
                                                <div class="select">
                                                    <select class="form-control" id="id_child_id" name="child_id">
                                                        {% for variant in product.variants %}
                                                            {% if variant.available %}

                                                                {% comment %}
                                                                  Note: if you use option_selection.js, your <select> tag will be overwritten, meaning what you have inside <option> will not reflect what you coded below.
                                                                {% endcomment %}
                                                                <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} data-sku="{{ variant.sku }}" value="{{ variant.id }}">Size: {{ variant.title }}</option>
                                                            {% else %}
                                                                <option disabled="disabled">
                                                                  size: {{ variant.title }}
                                                                </option>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="basket-form__col">
                                    <button class="cta cta--dark btn-add-to-basket" data-loading-text="Adding..." type="submit" value="Add to cart">Add to cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    {% if product.has_only_default_variant %}
                                    
                     {% else %}
                        <p class="product__sizeWorn">Size worn: {{ creator_size_worn  | strip_html | escape | strip }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="product__details">
        <div class="grid grid--inverted grid--borderBottomLess">
            <div class="grid__main">
                <div class="product__descContainer">
                    <p class="subtitle">Description</p>
                    <div class="desc">
                        {{ product.description | strip_html | escape | strip }}
                    </div>
                </div>
            </div>
            <div class="grid__sidebar">
                <div class="grid__sidebarWidget">
                    <div class="product__ref">
                        ID #{{ product.id }}
                    </div>
                </div>
                <div class="grid__sidebarWidget">
                    <!-- @TODO : make it share the current page using providers SDKs -->
                    <!-- @TODO : add dynamic content (text, subject, desc, etc) for each providers -->
                    <div class="share">
                        <p class="share__title">Share</p>
                        <ul class="share__list">
                            <li class="share__item">
                                <a href="mailto:?subject=&body=http://35.166.138.246/catalogue/test-bag-2_110/" title="Share by Email"><span class="fonticon fonticon--email fonticon--smallBox"></span></a>
                            </li>
                            <li class="share__item">
                                <a href="https://www.facebook.com/dialog/share?app_id=test&display=popup&href=http://35.166.138.246/catalogue/test-bag-2_110/&redirect_uri=http://35.166.138.246/catalogue/test-bag-2_110/" target="_blank" title="Share on Facebook"><span class="fonticon fonticon--facebook fonticon--smallBox"></span></a>
                            </li>
                            <li class="share__item">
                                <a href="https://twitter.com/share?url=http://35.166.138.246/catalogue/test-bag-2_110/&text=http://35.166.138.246/catalogue/test-bag-2_110/" target="_blank" title="Share on Twitter"><span class="fonticon fonticon--twitter fonticon--smallBox"></span></a>
                            </li>
                            <li class="share__item">
                                <a href="http://pinterest.com/pin/create/button/?url=http://35.166.138.246/catalogue/test-bag-2_110/&description=http://35.166.138.246/catalogue/test-bag-2_110/" target="_blank" title="Share on Pinterest"><span class="fonticon fonticon--pinterest fonticon--smallBox"></span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="color-context color-context--product">
        <article class="review">
            <div class="container container--pad">
                <div class="cols cols--m-2 cols--m-gutter32">
                    <div class="col">
                        <a class="u-block" href="{{ creator_profile_url }}">
                            <figure>
                                <div class="img-container img-container--landscape"><img src="{{ creator_image | img_url: '1024x' }}"></div>
                                <figcaption>
                                    <p>{{ creator_name }}</p>
                                    <p><small><span class="uppercase">{{ creator_city }}</span>, {{ creator_state_or_region }}, {{ creator_country }}</small></p>
                                </figcaption>
                            </figure>
                        </a>
                    </div>
                    <div class="col">
                        <div class="review__content">
                            <h2 class="subtitle">Product Review</h2>
                            <div class="desc">
                                {{ product.metafields.product_review.review }}
                            </div>
                            <div class="sizechart">
                                <ul class="sizechart__list">
                                    <li class="sizechart__item">Height: <span data-sizechart-unit="cm">{{ creator_height | times: cm_conversion_factor | ceil }} cm</span> <span data-sizechart-unit="inch">{{ creator_height }}"</span></li>
                                    <li class="sizechart__item">Hips: <span data-sizechart-unit="cm">{{ creator_hips | times: cm_conversion_factor | ceil }} cm</span> <span data-sizechart-unit="inch">{{ creator_hips }}"</span></li>
                                    <li class="sizechart__item">Chest/Bust: <span data-sizechart-unit="cm">{{ creator_chest_or_bust | times: cm_conversion_factor | ceil }} cm</span> <span data-sizechart-unit="inch">{{ creator_chest_or_bust }}"</span></li>
                                    <li class="sizechart__item">Waist: <span data-sizechart-unit="cm">{{ creator_waist | times: cm_conversion_factor | ceil  }} cm</span> <span data-sizechart-unit="inch">{{ creator_waist }}"</span></li>
                                </ul>
                                <div class="sizechart__toggles">
                                    <div class="toggle">
                                        <a class="toggle__label toggle__label--left" data-toggle-value="cm" href="#">Centimeters</a> <a class="toggle__slider" data-toggle-values="cm,inch" href="#"></a> <a class="toggle__label toggle__label--right" data-toggle-value="inch" href="#">Inches</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </div>
    <nav class="nav nav--internal">
        <ul class="nav__list">
            <li class="nav__item">
                <a class="link link--thick" href="#shipping-drawer">Shipping Info</a>
            </li>
            <li class="nav__item">
                <a class="link link--thick" href="#returns-drawer">Returns Policy</a>
            </li>
            <li class="nav__item">
                <a class="link link--thick" href="{{ creator_profile_url }}">{{ creator_name }}</a>
            </li>
        </ul>
    </nav>

    {% if collection_size > 4 %}
        <section class="triptych color-context color-context--products">
            <div class="container container--m-pad">
                <div class="triptych__wrapper triptych__wrapper--taller">
                    <header class="triptych__header">
                        <h2 class="title title--caps title--oneWordPerLine">More products</h2>
                    </header>
                    <div class="triptych__content">
                        <ul class="cols cols--m-3">
                            {% assign exclude_current_product = product.title %}

                            {% for collection in product.collections %}

                                {% if collection.title == product.vendor %}

                                    {% capture collection_url %}
                                        {{ collection.url }}
                                    {% endcapture %}
                                      
                                    {% for product in collection.products %}
                                            
                                        {% unless product.title contains exclude_current_product %}
                                            {% if product.available %}
                                                <li class="col">
                                                    {% include 'product-grid-item' %}
                                                </li>
                                            {% endif %}
                                        
                                        {% endunless %}
                                    {% endfor %}

                                {% endif %}

                            {% endfor %}
                        </ul>
                    </div>
                    <nav class="triptych__nav">
                        <a class="cta" href="{{ collection_url }}">See {{ product.vendor }}'s store</a>
                    </nav>
                </div>
            </div>
        </section>
    {% else %}


    {%endif %}

    {% comment %}
        @TODO shipping content and returns information dynamic
    {% endcomment %}
    <section class="drawer drawer--bigHeader drawer--right drawer--dark drawer--medium shipping-drawer" id="shipping-drawer">
        <a class="drawer__backdrop" href="#close-drawer" title="Close Drawer"></a>
        <div class="drawer__frame">
            <div class="drawer__header">
                <div class="drawer__headerContent">
                    <h2 class="title title--small">Shipping Info</h2>
                </div><a class="drawer__close close close--medium" href="#close-drawer" title="Close Drawer"></a>
            </div>
